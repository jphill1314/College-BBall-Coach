<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/recruit_position"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:paddingEnd="5dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/recruit_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingEnd="5dp"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/recruit_rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:paddingEnd="5dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/recruit_interest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:paddingEnd="5dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <Button
        android:id="@+id/button_recruit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_recruit"/>

    <Button
        android:id="@+id/button_commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_commit"
        android:visibility="gone"/>

</LinearLayout>